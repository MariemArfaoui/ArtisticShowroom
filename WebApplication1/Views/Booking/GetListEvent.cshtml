@model IEnumerable<Artistic_Showroom_Web.Models.EventViewModels>

@{
    ViewBag.Title = "GetListEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetListEvent</h2>
<br /><br />

<table class="table" style="margin-left:-100px">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.startDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.endDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.actualDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.inclusions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.statEvent)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.nbParticipant)
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.startDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.endDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.actualDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.inclusions)
        </td>
        <td>
            @*recuperer l'image*@
            @{string path = "~/Content/Upload/" + @item.imageURL;}
            @*enlever label for pour afficher seulement l'image*@
            <img src="@Url.Content(path)" width="50" height="50" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.statEvent)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.nbParticipant)
        </td>
        <td>
            @Html.ActionLink("Participant List", "GetParticipateUsers", new {  id=item.eventId  }, htmlAttributes: new { @class = "button" }) 
          
        </td>
    </tr>
}

</table>
